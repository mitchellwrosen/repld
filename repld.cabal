cabal-version: 2.4

name: repld
version: 0

executable repld
  build-depends:
    ansi-terminal,
    async,
    base,
    bytestring,
    directory,
    managed,
    network,
    optparse-applicative,
    safe-exceptions,
    stm,
    text,
    typed-process >= 0.2.5,
  default-language: Haskell2010
  ghc-options: -Wall -O -threaded -with-rtsopts=-N
  main-is: Main.hs
